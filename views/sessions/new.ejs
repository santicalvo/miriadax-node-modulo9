<h2>Alta de usuario</h2>
<% if(session && session.error && session.error.message) { %>
    <div class="error">Se ha producido el error: <%= session.error.message %> </div>
<% } %>
<form method="POST" action="/login">
    <div class="field">
        <label for="login">Login:</label> <br />
        <input type="text" id="login" name="login" size="30" />
    </div>
    <div class="field">
        <label for="password">Password:</label> <br />
        <input type="password" id="password" name="password" size="30" />
    </div>
    <div class="actions">
        <input type="submit" id="enviar" name="commit" value="enviar" />
    </div>
</form>